<% if @port!=80 -%>
Listen <%= @port %>
<% end -%>

<VirtualHost *:<%= @port %>>
ServerAdmin root@localhost
DocumentRoot <%= @document_root %>

<Directory />
Options FollowSymLinks
AllowOverride None
</Directory>


<Directory <%= @document_root %>>
Options Indexes FollowSymLinks MultiViews
AllowOverride None
Order Allow,deny
allow from all
</Directory>

</VirtualHost>